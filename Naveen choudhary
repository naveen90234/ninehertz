#Install phpmyadmin on ubuntu20.04
  sudo apt install phpmyadmin --no-install-recommends -y
  sudo ln -s /etc/phpmyadmin/apache.conf /etc/apache2/conf-available/phpmyadmin.conf
  sudo a2enconf phpmyadmin.conf
  sudo systemctl reload apache2.service

#Switch the php version
 sudo update-alternatives --set php /usr/bin/php8.2

 sudo a2dismod php
 sudo update-alternatives --config php
 sudo update-alternatives --config phar
 sudo update-alternatives --config phar.phar
 sudo a2enmod php


#Install Docker on ubuntu
  curl -l https://get.docker.com | sh
  sudo usermod -aG docker $USER

#Install Docker composer on ubunut
  mkdir -p ~/.docker/cli-plugins/
  curl -SL https://github.com/docker/compose/releases/download/v2.3.3/docker-compose-linux-x86_64 -o ~/.docker/cli-plugins/docker-compose
  chmod +x ~/.docker/cli-plugins/docker-compose

#Install Teams for ubuntu
  sudo snap install teams-for-linux


#apache2 configtaion for local project setup

vim  /etc/apache2/sites-available/000-default.conf 


  <VirtualHost *:80>
    ServerAdmin webmaster@localhost
    DocumentRoot /var/www/html
<Directory /var/www/html>
        Options -Indexes +FollowSymLinks
        AllowOverride All
        Require all granted
</Directory>
 
    ErrorLog ${APACHE_LOG_DIR}/error.log
    CustomLog ${APACHE_LOG_DIR}/access.log combined
</VirtualHost>


sudo a2enmod rewrite
sudo systemctl restart apache2


#htpassword for phpmyadmin

  sudo apt install apache2-utils
  sudo htpasswd -c /etc/phpmyadmin/.htpasswd admin
  sudo vim /etc/apache2/conf-enabled/phpmyadmin.conf
   
Alias /phpmyadmin /usr/share/phpmyadmin
<Directory /usr/share/phpmyadmin>
    Options SymLinksIfOwnerMatch
    DirectoryIndex index.php
    AllowOverride All
    AuthType Basic
    AuthName "Restricted Access"
    AuthUserFile /etc/phpmyadmin/.htpasswd
    Require valid-user
</Directory>


sudo systemctl reload apache2

 
#apache2 conf 

   <VirtualHost *:80>
    ServerAdmin webmaster@localhost
    ServerName staging.cevaheer.com
    DocumentRoot /var/www/html/build

    ErrorLog ${APACHE_LOG_DIR}/error.log
    CustomLog ${APACHE_LOG_DIR}/access.log combined

    # Laravel API - accessible via /app
    Alias /cevaheer /var/www/html/cevaheer
    <Directory /var/www/html/cevaheer>
        Options Indexes FollowSymLinks
        AllowOverride All
        Require all granted
    </Directory>

    <Directory /var/www/html/build>
        Options Indexes FollowSymLinks
        AllowOverride All
        Require all granted
    </Directory>
</VirtualHost>

 
 
 

